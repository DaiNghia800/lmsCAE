mixin box-desc(padding, srcImg, title, subTitle)
    div(class=`w-1/3 text-center flex items-start justify-center flex-wrap ${padding ? padding : ''}`)
        div(class="px-2 flex justify-center flex-wrap")
            div(class="icon w-[7rem] h-[7rem] rounded-[50%] bg-white shadow-pro flex items-center justify-center")
                img(src=srcImg class="")
            h5(class="w-full text-[--color-btn] font-[700] text-[1.5rem] my-4")=title
            p(class="text-[--color-link] font-[400] text-[1rem]")=subTitle