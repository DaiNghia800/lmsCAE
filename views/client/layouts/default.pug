doctype html
html
  head
    title  #{pageTitle}
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap")
    link(rel="stylesheet", href="client/css/style.css")
    
  body(class="font-roboto")

    - if (messages.success && messages.success.length > 0)
      div(
        class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4 fixed top-5 right-8 z-[9999999999]"
        alert-message=""
      ) #{messages.success}
    - if (messages.error && messages.error.length > 0)
      div(
        class="bg-red-100 text-red-800 p-4 rounded mb-4 fixed top-5 right-8 z-[9999999999]"
        alert-message=""
      ) #{messages.error}

    include ../partials/header.pug

    block main

    include ../partials/footer.pug

    
    script(src="client/js/script.js")
    