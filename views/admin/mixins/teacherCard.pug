mixin TeacherCard(avatar, name, courses, rating, link)
  div(class="flex justify-between items-center border-b-[1px] border-[#dde0e3] last:border-b-0")
    div(class="flex items-center gap-4 py-4 cursor-pointer")
      div(class="avatar")
        img.w-12.h-12.rounded-full.object-cover(src=avatar alt=`${name} avatar`)
      div(class="content")
        h4(class="font-bold text-[--color-btn] text-[1rem] hover:text-[#066ac9] transition-all duration-500") #{name}
        ul(class="flex items-center justify-between gap-4 text-[--color-link] text-[0.9rem]")
          li(class="flex items-center gap-1")
            svg(class="svg-inline--fa fa-book text-purple w-4 h-4" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="book" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512")
              path(class="fill-purple" d="M96 0C43 0 0 43 0 96V416c0 53 43 96 96 96H384h32c17.7 0 32-14.3 32-32s-14.3-32-32-32V384c17.7 0 32-14.3 32-32V32c0-17.7-14.3-32-32-32H384 96zm0 384H352v64H96c-17.7 0-32-14.3-32-32s14.3-32 32-32zm32-240c0-8.8 7.2-16 16-16H336c8.8 0 16 7.2 16 16s-7.2 16-16 16H144c-8.8 0-16-7.2-16-16zm16 48H336c8.8 0 16 7.2 16 16s-7.2 16-16 16H144c-8.8 0-16-7.2-16-16s7.2-16 16-16z")
            | #{courses} Courses
          li(class="flex items-center gap-1")
            svg(class="svg-inline--fa fa-star text-warning w-4 h-4" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="star" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512")
              path(class="fill-warning" d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z")
            | #{rating}/5.0
    a(class="link p-3 bg-[#f5f7f9] rounded font-[500] text-[0.9rem]" href=link target="blank") View
