mixin instructorRow(img, name, city, joinDate, progress, courses, payments)
  tr(class="border-b text-[--color-link] hover:bg-[#dde0e3] transition-all duration-500")
    td.px-4.py-3.flex.items-center.gap-3
      img(src=img class="w-10 h-10 rounded-full")
      div
        div.font-semibold.text-black= name
        div.text-xs.text-gray-500.flex.items-center.gap-1
          <svg class="svg-inline--fa fa-location-dot fa-fw" width="1em" height="1em" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="location-dot" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path class="" fill="rgb(116,117,121)" d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 128a64 64 0 1 1 0 128 64 64 0 1 1 0-128z"></path></svg>
          = city
    td.px-4.py-3= joinDate
    td.px-4.py-3
      div.flex.items-center.gap-2
        span.font-bold.text-black #{progress}%
        div(class="flex-1 bg-gray-200 h-1 rounded")
          div(class="bg-blue-500 h-1 rounded" style=`width:${progress}%`)
    td.px-4.py-3= courses
    td.px-4.py-3 $#{payments}
    td.px-4.py-3
      button(class="p-3 rounded-full bg-gray-100 hover:bg-gray-200 mr-1")
        <svg width="1em" height="1em" viewBox="0 0 16 16" fill="#0b0f13" role="img" focusable="false"><path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"></path><path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"></path></svg>
      button(class="p-3 rounded-full mr-1 bg-gray-100 hover:bg-gray-200") 
        <svg width="1em" height="1em" viewBox="0 0 16 16" fill="#0b0f13" role="img" focusable="false"><path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v.217l7 4.2 7-4.2V4a1 1 0 0 0-1-1zm13 2.383-4.708 2.825L15 11.105zm-.034 6.876-5.64-3.471L8 9.583l-1.326-.795-5.64 3.47A1 1 0 0 0 2 13h12a1 1 0 0 0 .966-.741M1 11.105l4.708-2.897L1 5.383z"></path></svg>
      button(class="p-3 rounded-full bg-gray-100 hover:bg-gray-200")
        <svg class="svg-inline--fa fa-ban" width="1em" height="1em" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="ban" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path class="" fill="#0b0f13" d="M367.2 412.5L99.5 144.8C77.1 176.1 64 214.5 64 256c0 106 86 192 192 192c41.5 0 79.9-13.1 111.2-35.5zm45.3-45.3C434.9 335.9 448 297.5 448 256c0-106-86-192-192-192c-41.5 0-79.9 13.1-111.2 35.5L412.5 367.2zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256z"></path></svg>
