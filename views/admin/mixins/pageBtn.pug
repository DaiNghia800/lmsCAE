mixin pageBtn(label, active)
  button(
    class=[
      "px-3 py-1 rounded-md text-sm transition-all duration-500",
      active 
        ? "bg-blue-600 text-white border-blue-600" 
        : "bg-[rgb(6,106,201)]/30 text-[rgb(6,106,201)] hover:bg-[rgb(6,106,201)] hover:text-white"
    ]
  ) #{label}
